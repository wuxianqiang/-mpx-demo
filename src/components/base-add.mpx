<template>
  <view class="add" catchtap="stopEvent" wx:if="{{food}}">
    <view class="add__wrap" wx:if="{{food.count}}" bindtap="handleReduce">
      <!-- <image class="add__img" mode="widthFix" src="../style/imgs/minus.png"></image> -->
      <image class="add__img" mode="widthFix" src="data:image/png;base64,"></image>
    </view>
    <view class="add__count" wx:if="{{food.count}}">
      {{food.count}}
    </view>
    <view class="add__wrap" bindtap="handleAdd">
      <!-- <image class="add__img" mode="widthFix" src="../style/imgs/add.png"></image> -->
      <image class="add__img" mode="widthFix" src="https://s3plus.meituan.net/v1/mss_e2821d7f0cfe4ac1bf9202ecf9590e67/cdn-prod/file:9096d347/40b1252b285172da0c8b7d88a2b46220.png"></image>
    </view>
  </view>
</template>

<script>
  import { createComponent } from '@mpxjs/core'
  import Store from '../store/index'

  createComponent({
    data: {
      listData: ['手机', '电视', '电脑']
    },
    properties: {
      food: {
        type: Object,
        value: {}
      },
      tag: {
        type: String,
        value: ''
      }
    },
    methods: {
      ...Store.mapMutations(['addCallback', 'reduceCallback']),
      stopEvent () {
        return false
      },
      handleAdd () {
        this.addCallback({ tag: this.tag, spuId: this.food.spuId })
      },
      handleReduce () {
        this.reduceCallback({ tag: this.tag, spuId: this.food.spuId })
      }
    }
  })
</script>

<style lang="stylus">
  .add
    display flex
    color #333
    align-items center
    .add__wrap
      width 20px
      height 20px
      .add__img
        width 20px
        height 20px
    .add__count
      padding 0 10px
      font-size 14px
</style>

<script type="application/json">
  {
    "component": true
  }
</script>
