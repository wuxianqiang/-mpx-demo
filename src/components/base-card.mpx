<template>
  <view class="card" wx:if="{{index}}">
    <view class="card__wrapper">
      <image class="card__img" mode="widthFix" src="{{showFood.bigImageUrl}}"></image>
    </view>
    <view class="card__title">{{showFood.spuName}}</view>
    <view class="card__salc">月售26</view>
    <view class="card__price">
      {{showFood.currentPrice}}
      <!-- todo -->
      <!-- <base-add food="{{item}}" tag="{{item.tag}}"></base-add> -->
    </view>
    <view class="card__desc">
      <view class="card__subtitle">商品简介</view>
      <view>
        {{showFood.spuDesc}}
      </view>
    </view>
  </view>
</template>

<script>
  import { createComponent } from '@mpxjs/core'
  import Store from '../store/index'

  createComponent({
    data: {
      listData: ['手机', '电视', '电脑']
    },
    properties: {
      // 需要传入属性
      index: {
        type: String,
        default: ''
      },
      type: {
        type: String,
        default: ''
      }
    },
    computed: {
      ...Store.mapGetters(['foodList']),
      showFood () {
        // 处理属性
        if (!this.index) {
          return ''
        }
        return this.foodList[this.type].spuList[this.index]
      }
    }
  })
</script>

