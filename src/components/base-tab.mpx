<template>
  <view class="tab">
    <view
      class="tab__item {{current===index?'tab__active':''}}"
      wx:for="{{listData}}"
      wx:key="index"
      bindtap="handleClick(index)">
      {{item}}
    </view>
  </view>
</template>

<script>
  import { createComponent } from '@mpxjs/core'

  createComponent({
    data: {
      listData: ['点菜', '评价', '商家'],
      current: 0
    },
    methods: {
      handleClick (index) {
        console.log(index)
        // 组件间通信与事件
        this.current = index
        this.triggerEvent('select', { index })
      }
    }
  })
</script>

